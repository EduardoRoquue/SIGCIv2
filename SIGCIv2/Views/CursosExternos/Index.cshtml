@model IEnumerable<CursosExternos>

@{
    ViewData["Title"] = "Unidad de planeación y Cusrsos Externos";
}

<h1>Unidad de Planeación y Cursos Externos</h1>

<a asp-action="Crear" class="btn btn-primary mb-3">Crear nuevo</a>

<table id="Externos" class="table table-striped" style="width:100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>NOMBRE</th>
            <th>INICIO</th>
            <th>TERMINO</th>
            <th>HORAS</th>
            <th>DIAS
            <th>INSCRITOS</th>
            <th>PROVEEDOR</th>
            <th>OBJETIVO</th>
            <th>COSTO</th>
            <th>TIPO</th>
            <th>MODALIDAD</th>
            <th>INSTRUCTOR</th>
            <th>EVALUACION</th>
            <th>ACCIONES</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var externo in Model)
        {           
            <tr>
                <td>@externo.IdCursoExterno</td>
                <td>@externo.NombreCurso</td>
                <td>@externo.Inicio.ToString("dd/MM/yyyy")</td>
                <td>@externo.Termino.ToString("dd/MM/yyyy")</td>
                <td>@externo.Horas</td>
                <td>@externo.Dias</td>
                <td>@externo.Inscritos</td>
                <td>@externo.Proveedor.ToUpper()</td>
                <td>@externo.Objetivo.ToUpper()</td>
                <td>@externo.Costo</td>
                <td>@externo.Tipo.ToUpper()</td>
                <td>@externo.Modalidad.ToUpper()</td>
                <td>@externo.Instructor.ToUpper()</td>
                <td>@externo.Evaluacion</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@externo.IdCursoExterno">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#Externos').DataTable();
        });
    </script>
}