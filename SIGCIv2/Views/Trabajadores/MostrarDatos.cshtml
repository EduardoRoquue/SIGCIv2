@{
    ViewData["title"] = "Cargar datos";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                Cargar Excel
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-sm-4">
                        <input class="form-control-file" type="file" id="InputExcel"/>
                    </div>
                    <div class="col-sm-12">
                        <button class="btn btn-warning" onclick="mostrarDatos()">Mostrar Datos</button>
                        <button class="btn btn-success" onclick="enviarDatos()">Enviar Datos a la DB</button>
                    </div>
                </div>

                <hr />

                <div class="row">
                    <div class="col-sm-12">
                        <table id="tbData" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Expediente</th>
                                    <th>Nombre</th>
                                    <th>Cat</th>
                                    <th>Gerencia</th>
                                    <th>Coordinacion</th>
                                    <th>Genero</th>
                                    <th>Calidad laboral</th>
                                    <th>Estatus</th>
                                    <th>Seccional</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>

@section Scripts{
    <script>

        function mostrarDatos(){
            const input = document.getElementById("InputExcel")
            const formData = new FormData()
            formData.append("ArchivoExcel", input.files[0])
            fetch("Trabajadores/MostrarDatos", {
                method: "POST",
                body: formData
            })
            .then((response) =>{return response.json()})
            .then((dataJson) => {
                console.log(dataJson)
            })
        }

    </script>
}