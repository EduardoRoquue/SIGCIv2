@model Trabajador

@{
    ViewData["Title"] = "Borrar Trabajador";
}

<h1>Borrar expediente: @Model.Expediente  </h1>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div class="card">
    <form asp-controller="Trabajadores" asp-action="Borrar">
        <div class="card-body">

            <input type="hidden" asp-for="IdTrabajador" />

            <input type="hidden" asp-for="Expediente" />

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input type="text" disabled asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CATSTC" class="form-label"></label>
                <input type="text" disabled asp-for="CATSTC" class="form-control" />
                <span asp-validation-for="CATSTC" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Gerencia" class="form-label"></label>
                <input type="text" disabled asp-for="Gerencia" class="form-control" />
                <span asp-validation-for="Gerencia" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Coordinacion" class="form-label"></label>
                <input type="text" disabled asp-for="Coordinacion" class="form-control" />
                <span asp-validation-for="Coordinacion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Genero" class="form-label"></label>
                <input type="text" disabled asp-for="Genero" class="form-control" />
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CalidadLaboral" class="form-label"></label>
                <input type="text" disabled asp-for="CalidadLaboral" class="form-control" />
                <span asp-validation-for="CalidadLaboral" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Estatus" class="form-label"></label>
                <input type="text" disabled asp-for="Estatus" class="form-control" />
                <span asp-validation-for="Estatus" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Seccional" class="form-label"></label>
                <input type="text" disabled asp-for="Seccional" class="form-control" />
                <span asp-validation-for="Seccional" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Discapacidad" class="form-label"></label>
                <input type="text" disabled asp-for="Discapacidad" class="form-control" />
                <span asp-validation-for="Discapacidad" class="text-danger"></span>
            </div>

        </div>
        <button type="submit" id="btn-borrar" class="btn btn-danger">Borrar</button>
        <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.getElementById('btn-borrar').addEventListener('click', function (event) {
            var confirmacion = confirm('Al borrar este trabajador, se eliminará de todo el sistema, ¿Desea continuar?');

            if (!confirmacion) {
                event.preventDefault(); // Cancela el evento de envío del formulario si se hace clic en "Cancelar" en la alerta
            }
        });
    </script>


}